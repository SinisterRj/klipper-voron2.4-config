    "version": "2.0.0",
    "tasks": [
        {
            "label": "üßπ Clear klipper.log",
            "type": "shell",
            "command": "ssh pi@voron24.local 'truncate -s 0 /home/pi/printer_data/logs/klippy.log*' ",
            "problemMatcher": []
        },
        {
            "label": "üßπ Clear moonraker.log",
            "type": "shell",
            "command": "ssh pi@voron24.local 'truncate -s 0 /home/pi/printer_data/logs/moonraker.log*' ",
            "problemMatcher": []
        },
        {
            "label": "üßπ Clear loadcell.log",
            "type": "shell",
            "command": "ssh pi@voron24.local 'truncate -s 0 /home/pi/printer_data/logs/loadcell.log' ",
            "problemMatcher": []
        },
        {
            "label": "‚èØÔ∏è Restart Klipper",
            "type": "shell",
            "command": "ssh pi@voron24.local 'sudo service klipper restart'",
            "dependsOn": ["üßπ Clear klipper.log"],
            "problemMatcher": []
        },
        {
            "label": "üì¶ Deploy Klipper",
            "type": "shell",
            "command": "rsync -iahpr --exclude={\".*\",\"*.pyc\",\"board/*\",\"out/*\"} ../klipper pi@voron24.local:/home/pi/",
            "problemMatcher": []
        },
        {
            "label": "üì¶ Deploy Printer Config",
            "type": "shell",
            "command": "rsync -iahp ./printer_data/config/* pi@voron24.local:/home/pi/printer_data/config/",
            "problemMatcher": []
        },
        {
            "label": "‚ö° Flash MCU Klipper",
            "type": "shell",
            "command": "ssh pi@voron24.local './printer_data/config/flash_mcu.sh'",
            "problemMatcher": []
        },
        {
            "label": "‚ö° Flash MCU Katapult",
            "type": "shell",
            "command": "ssh pi@voron24.local './printer_data/config/flash_mcu_katapult.sh'",
            "problemMatcher": []
        },
        {
            "label": "üõ†Ô∏è Make Firmware",
            "type": "shell",
            "command": "ssh pi@voron24.local 'cd ./klipper; make'",
            "problemMatcher": []
        },
        {
            "label": "voron24_deploy_clibration_prints",
            "type": "shell",
            "command": "rsync -iahp ./printer_data/gcodes/* pi@voron24.local:/home/pi/printer_data/gcodes/",
            "problemMatcher": []
        },
        {
            "label": "voron24_backup_variables",
            "type": "shell",
            "command": "rsync pi@voron24.local:/home/pi/printer_data/variables.cfg ./printer_data/",
            "problemMatcher": []
        }
    ]
}